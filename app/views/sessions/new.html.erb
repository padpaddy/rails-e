<div class="container sign-up">
	<div class="row">
		<div class="title">
			<h4>SIGN IN</h4>
		</div>
	</div>
	<div class="row">

		<div class="sign-up-form col-md-4 col-md-offset-4">
			<%= form_for :session,url: login_path, class: "form-horizontal" do |f| %>
				<div class="form-group">
					<label class="control-label">Email</label>
					<%= f.text_field :email, class: "form-control" %>
				</div>
				<div class="form-group">
					<label class="control-label">Password</label>
					<%= f.password_field :password, class: "form-control" %>
				</div>
        <% flash.each do |key, value| %>
          <div class="alert-green alert-<%= key %>"><%= value %></div>
        <% end %>
				<div class="action">
					<%= f.submit class: "btn btn-primary btn-center", :value => "Log in" %>
          <div class="row">
            Don't have account<%= link_to "Sign Up", users_sign_up_path, class: "btn btn-link" %>
          </div>
				</div>
			<% end %>
		</div>
	</div>
</div>
